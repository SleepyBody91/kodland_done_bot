import discord 
from discord.ext import commands


intents = discord.Intents.default()
intents.message_content = True


bot = commands.Bot(command_prefix='$', intents=intents)


@bot.event
async def on_ready():
    print(f'{bot.user} теперь бот')


@bot.command() #как перерабатывают пластик 
async def plastic_info(ctx):
    
    info = "Процесс переработки пластика состоит из нескольких этапов: сбор, сортировка, измельчение, промывка и гранулирование. Сортировка происходит вручную или автоматически. Она помогает избавиться от загрязненных элементов из всего потока отходов. После этого пластик измельчают на хлопья, а затем перерабатывают в гранулы путем нагревания. Производственная линия предприятий по переработке состоит из специального оборудования общей стоимостью до ₽10 млн."

    await ctx.send(info)

@bot.command() #время разложение бумаги
async def iteam_papper(ctx):

    papper = "Время разложения обычной бумаги составляет около 2-5 месяцев."
    await ctx.send(papper)

@bot.command()
async def how_to(ctx): #что сделать что бы уменьшить загрязнение природы,
    how = "Чтобы уменьшить загрязнение природы, существует несколько действий, которые можно предпринять: Экономия ресурсов: Уменьшите потребление энергии и воды, используя энергоэффективные приборы и оборудование. Выключайте свет и электроприборы, когда они не используются. Сократите использование воды, например, путем установки водосберегающих смесителей и регуляторов расхода воды. Повышение эффективности транспорта: Пересаживайтесь на общественный транспорт, когда это возможно, или используйте велосипеды и пешеходные прогулки для коротких поездок. Если нужно использовать автомобиль, старайтесь объединять поездки, чтобы сократить выбросы вредных веществ в атмосферу. Утилизация отходов: Разделяйте и перерабатывайте отходы. Отделяйте бумагу, пластик, стекло и металл, чтобы они могли быть переработаны. Покупайте продукты с минимальной упаковкой и избегайте одноразовых товаров."
    await ctx.send(how)


@bot.command() #help
async def s_help(ctx):
    help_message = "**Список доступных команд:**\n\n"
    help_message += "**$plastic_info** - Информация о переработке пластика.\n"
    help_message += "**$iteam_papper** - Информация о времени разложения бумаги.\n"
    help_message += "**$how_to** - Советы по уменьшению загрязнения природы.\n"
    help_message += "**$s_help** - Информация о боте и его функционале.\n"
    await ctx.send(help_message)

bot.run('discord')
